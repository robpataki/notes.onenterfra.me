---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import ArticleList from '@components/ArticleList/ArticleList.astro'
const allPosts = Object.values(import.meta.glob('@tech-notes/**/*.{md,mdx}', { eager: true }))
---

<DefaultLayout title="Home">
  <section aria-label="section-1-heading" class="my-64">
    <div class="container">
      <h1 id="section-1-heading" class="mb-16 text-6xl">Tech notes</h1>
      <ArticleList articles={allPosts} />
    </div>
  </section>
</DefaultLayout>
